                                {% else %}
                                    {{ form2.password(class="form-control") }}
                                {% endif %}
                            </div>
                            <div class="form-group">
                                <label>Repeat Password</label>
                                {# <input type="password" class="form-control" placeholder="Password"> #}
                                {% if form2.confirm_password.errors %}
                                    {{ form2.confirm_password(class="form-control is-invalid") }}
                                    <div class="invalid-feedback">
                                        {% for error in form2.confirm_password.errors %}
                                            <span>{{ error }}</span>
                                        {% endfor %}
                                    </div>
                                {% else %}
                                    {{ form2.confirm_password(class="form-control") }}
                                {% endif %}
                            </div>
                            {# <button type="submit" class="btn btn-primary mt-4">Register</button> #}
                            {{ form2.submit(class="btn btn-primary mt-4") }}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>