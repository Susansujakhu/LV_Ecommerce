            $('#wishlist_indicator').text(data.wishlist_indicator);
        });
        $(this).fadeOut(1000).fadeIn(1000);
        $(this).css('fill', '#000000');
    });
 
    $(document).on('click', '#addCompare', function(){
       var compare_index = $(this).attr('data-id');
        req = $.ajax({
                url: "/compare_add",
                type: "POST",
                data: compare_index,
                }); 
